<form
  action="products"
  method="POST"
  id="formProduct"
  class="formProduct"
>
  <h2 class="title">Register Products</h2>
  <input
    class="controls"
    type="text"
    name="title"
    id="title"
    placeholder="Enter Name Product"
    required
  />
  <input
    class="controls"
    type="text"
    name="description"
    id="description"
    placeholder="Enter Description"
    required
  />
  <input
    class="controls"
    type="number"
    name="stock"
    id="stock"
    placeholder="Enter Stock"
    required
  />
  <input
    class="controls"
    type="text"
    name="thumbnail"
    id="thumbnail"
    placeholder="Enter image: url"
    required
  />
  <input
    class="controls"
    type="text"
    name="category"
    id="category"
    placeholder="Enter Category"
    required
  />
  <input
    class="controls"
    type="number"
    name="price"
    id="price"
    placeholder="Enter Price"
    required
  />
  <input
    class="controls"
    type="text"
    name="code"
    id="code"
    placeholder="Enter Code"
    required
  />
  <button class="botons" type="submit" id="add-btn">Registrar </button>
  <h2> To Delete a product: </h2>
  <input
    class="controls"
    type="number"
    name="pid"
    id="pid"
    placeholder="Enter ID product"
  />
  <button
    class="btn btn-delete"
    type="button"
    id="delete-btn"
    type="button"
  >Delete Product</button>
</form>

<div class="container-form" id="container-form">

</div>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTime.js"></script>